<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.danielfox.foodchoices.NewVisit">

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="save"
        android:id="@+id/saveButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Visit"
        android:id="@+id/newVisitWelcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/cancelButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@color/textEdit"
        android:id="@+id/restaurantName"
        android:layout_below="@+id/cancelButton"
        android:layout_alignParentStart="true"
        android:hint="Restaurant Name"
        android:layout_alignEnd="@+id/saveButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/textEdit"
        android:padding="5dp"
        android:id="@+id/foodEaten"
        android:layout_below="@+id/restaurantName"
        android:layout_alignParentStart="true"
        android:hint="Main Course"
        android:layout_alignEnd="@+id/restaurantName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/textEdit"
        android:padding="5dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:layout_below="@+id/foodEaten"
        android:layout_alignParentStart="true"
        android:hint="Date"
        android:layout_alignEnd="@+id/foodEaten" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Overall Rating:"
        android:id="@+id/overallHeader"
        android:layout_below="@+id/date"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overallRating"
        android:layout_below="@+id/overallHeader"
        android:layout_alignParentStart="true"
        android:numStars="5"
        android:stepSize="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/textEdit"
        android:padding="5dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/price"
        android:layout_below="@+id/overallRating"
        android:layout_alignParentStart="true"
        android:hint="Price"
        android:layout_alignEnd="@+id/overallHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Service:"
        android:id="@+id/serviceHeader"
        android:layout_below="@+id/price"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/serviceRating" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceRating"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/serviceHeader"
        android:layout_alignParentLeft="true"
        android:numStars="5"
        android:stepSize="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/textEdit"
        android:padding="5dp"
        android:id="@+id/comments"
        android:hint="Comments"
        android:layout_below="@+id/serviceRating"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/price" />

</RelativeLayout>
