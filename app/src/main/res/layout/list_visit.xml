<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="date"
        android:id="@+id/visitDate"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food eaten"
        android:id="@+id/visitFood"
        android:layout_below="@+id/visitDate"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitRating"
        android:layout_alignTop="@+id/visitFood"
        android:layout_toEndOf="@+id/visitFood"
        android:layout_alignBottom="@+id/visitFood"
        android:numStars="5"
        android:isIndicator="true"
        android:stepSize="1" />

</RelativeLayout>