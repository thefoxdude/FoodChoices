<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="danielfox.LoginActivity"
    android:background="@color/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Food Choices"
        android:id="@+id/Welcome"
        android:layout_alignParentTop="true"
        android:textColor="@color/text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Login"
        android:id="@+id/loginInstruction"
        android:layout_below="@+id/Welcome"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"
        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/loginInstruction"
        android:layout_alignStart="@+id/Welcome"
        android:layout_marginTop="25dp"
        android:textColor="@color/text"
        android:layout_alignEnd="@+id/Welcome"
        android:background="@drawable/white_background"
        android:padding="10dp"
        android:hint="Username"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:hint="Password"
        android:background="@drawable/white_background"
        android:padding="10dp"
        android:paddingLeft="5dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:background="@drawable/black_background"
        android:textSize="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpButton"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/black_background"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignStart="@+id/password" />

</RelativeLayout>
