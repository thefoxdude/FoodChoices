<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.danielfox.foodchoices.SignUp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:id="@+id/signUpHeader"
        android:layout_alignParentTop="true"
        android:textColor="@color/text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameField"
        android:layout_below="@+id/signUpHeader"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:hint="First Name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameField"
        android:layout_below="@+id/firstNameField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Last Name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameField"
        android:layout_below="@+id/lastNameField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordField"
        android:layout_below="@+id/usernameField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordConfirmField"
        android:layout_below="@id/passwordField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Confirm Password"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpConfirm"
        android:layout_below="@+id/passwordConfirmField"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/signUpCancel"
        android:layout_alignTop="@+id/signUpConfirm"
        android:layout_alignParentStart="true" />
</RelativeLayout>
